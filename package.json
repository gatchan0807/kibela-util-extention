{
  "name": "kibela-util-extension",
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "build": "ts-node -T build.ts --firefox --chrome",
    "type-check": "npx tsc --noEmit",
    "clean:chrome": "rimraf dist-chrome",
    "clean:firefox": "rimraf dist-firefox",
    "build:firefox": "ts-node -T build.ts --firefox",
    "build:chrome": "ts-node -T build.ts --chrome",
    "run:firefox": "web-ext run -s dist-firefox",
    "run:chrome": "web-ext run -s dist-chrome -t chromium",
    "package:firefox": "echo \"=== つかえないよ！！===\"; web-ext build -s dist-firefox --overwrite-dest",
    "package:chrome": "yarn clean:chrome && yarn build:chrome && zip -r packaged/dist-chrome.zip dist-chrome",
    "test": "jest",
    "test:ci": "jest --ci --runInBand",
    "create:tag": "node ./scripts/create-new-version-tag.js"
  },
  "dependencies": {
    "@types/chrome": "^0.0.178",
    "@types/styled-components": "^5.1.26",
    "esbuild": "^0.14.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.6",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.2",
    "@types/react-dom": "^17.0.11",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.5.1",
    "chokidar": "^3.5.2",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "jest": "^27.5.1",
    "postcss": "^8.4.6",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.18",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0"
  }
}
